<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="172dp"
    android:layout_height="280dp"
    android:background="@drawable/background_view_holder_movie"
    android:layout_marginStart="20dp"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivMovieImage"
        android:layout_width="match_parent"
        app:srcCompat="@drawable/img_black_widow"
        android:scaleType="centerCrop"
        android:layout_height="212dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvComingSoonDate"
        android:layout_marginTop="8dp"
        android:layout_marginStart="130dp"
        android:text="8th AUG"
        android:textSize="10sp"
        android:letterSpacing="-0.03"
        android:textColor="#555555"
        android:textStyle="bold"
        android:gravity="center_horizontal|top"
        android:background="@drawable/background_neon_green_radius"
        android:layout_width="32dp"
        android:layout_height="30dp"/>

    <View
        android:id="@+id/vGradient"
        android:background="@drawable/gradient_movie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tvMovieName"
        android:layout_below="@+id/ivMovieImage"
        android:layout_marginStart="8dp"
        android:textSize="@dimen/text_regular_2x"
        android:text="Black Widow"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivIMDB"
        android:layout_below="@+id/ivMovieImage"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@id/tvMovieName"
        android:layout_marginStart="14dp"
        app:srcCompat="@drawable/icon_rating"
        android:layout_width="32dp"
        android:layout_height="20dp"/>
    <TextView
        android:id="@+id/tvMovieRating"
        android:layout_alignBaseline="@+id/tvMovieName"
        android:layout_below="@+id/tvMovieName"
        android:layout_marginStart="144dp"
        android:layout_marginEnd="8dp"
        android:text="9.0"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvMovieCert"
        android:layout_below="@+id/tvMovieName"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="U/A"

        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivEllipse"
        android:layout_below="@+id/tvMovieName"
        android:layout_toEndOf="@+id/tvMovieCert"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/img_ellipse"
        android:layout_width="6dp"
        android:layout_height="6dp"/>
    <TextView
        android:id="@+id/tvScreenType"
        android:layout_below="@+id/tvMovieName"
        android:layout_toEndOf="@+id/ivEllipse"
        android:layout_marginStart="10dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="8dp"
        android:text="2D, 3D, 3D IMAX, DBOX 3D"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>