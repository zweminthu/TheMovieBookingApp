<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginHorizontal="22dp"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/background_profile_item">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivProfileItemIcon"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_baseline_logout_white_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvProfileItemName"
        android:text="Logout"
        android:textColor="@color/white"
        android:textSize="17.2sp"
        android:letterSpacing="-0.02"
        android:layout_toEndOf="@+id/ivProfileItemIcon"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivProfileItemRight"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:src="@drawable/img_arrow_right"
        android:layout_width="10dp"
        android:layout_height="18dp"/>
</RelativeLayout>