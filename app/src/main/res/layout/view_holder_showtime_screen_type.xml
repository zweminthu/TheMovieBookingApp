<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background_showtime_screen_type"
    android:layout_marginTop="20dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_width="96dp"
    android:layout_height="92dp">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvShowTime"
        android:layout_centerHorizontal="true"
        android:text="9:30 AM"
        android:layout_marginTop="6dp"
        android:textSize="14sp"
        android:letterSpacing="-0.02"
        android:textColor="#888888"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCinemaScreenType"
        android:layout_below="@+id/tvShowTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:text="3D"
        android:textSize="12sp"
        android:letterSpacing="-0.03"
        android:textColor="#888888"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvScreenNo"
        android:layout_below="@+id/tvCinemaScreenType"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:text="Screen 1"
        android:textSize="12sp"
        android:letterSpacing="-0.03"
        android:textColor="#888888"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_below="@+id/tvScreenNo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:text="21 Available"
        android:textSize="12sp"
        android:letterSpacing="-0.03"
        android:textColor="#888888"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>